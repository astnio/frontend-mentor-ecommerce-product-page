---
import CartItemList from './CartItemList.astro';
import '/src/style/global.css';
---

<style>
  .cart-wrapper {
    position: absolute;
    top: 3rem;
    left: 50%;
    transform: translateX(-50%);

    display: flex;
    flex-direction: column;
    align-items: center;

    width: 360px;

    min-height: 256px;

    background-color: var(--clr-white);

    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);

    border-radius: 10pt;

    z-index: 2;

    opacity: 0;
    visibility: hidden;
    pointer-events: none;

    transition-property: opacity, visibility, pointer-events;
    transition-duration: 0.25s;
    transition-timing-function: ease-out;
  }

  .cart-heading {
    margin-right: auto;

    padding-inline: 1rem;
    padding-block: 1rem;

    font-weight: 700;
    font-size: 16px;
  }

  .cart-horizontal-rule {
    border: none;

    width: 100%;

    height: 1px;

    background-color: var(--clr-grey-400);
  }

  .cart-items-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;

    padding-inline: 1rem;

    margin-block: auto;

    height: 100%;
  }

  .cart-empty-message {
    color: var(--clr-blue-600);
    font-weight: 700;
    font-size: 16px;

    margin-bottom: 2rem;
  }

  .hidden {
    display: none;
  }

  @media screen and (max-width: 1150px) {
    .cart-wrapper {
      margin-top: 5rem;
    }
  }
</style>

<div
  id='cart-menu'
  class='cart-wrapper'>
  <p class='cart-heading'>Cart</p>
  <hr class='cart-horizontal-rule' />
  <div class='cart-items-wrapper'>
    <p
      id='cart-empty-message'
      class='cart-empty-message hidden'>
      Your cart is empty.
    </p>
    <div id='cart-item-list-wrapper'>
      <CartItemList />
    </div>
  </div>
</div>
