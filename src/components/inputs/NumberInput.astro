<style>
  .num-counter-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;

    min-height: 56px;

    width: 100%;
    max-width: 157px;

    font-weight: 700;

    background-color: var(--clr-blue-100);

    border-radius: 10pt;
  }

  .num-btn {
    display: flex;
    align-items: center;
    justify-content: center;

    padding: 1rem;

    color: var(--clr-orange-500);
    font-weight: 700;
    font-size: 1.4rem;

    transition: color 0.1s ease-out;
  }

  .num-btn:hover {
    cursor: pointer;
    color: var(--clr-orange-200);
  }

  input[type='number'] {
    display: flex;
    align-items: center;
    justify-content: center;

    width: 2rem;

    margin: 0;
    padding: 0;

    border: none;
    outline: none;

    background-color: transparent;

    text-align: center;
    font-size: 16px;
    font-weight: 700;

    -moz-appearance: textfield;
  }

  input[type='number']::-webkit-inner-spin-button,
  input[type='number']::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  .visually-hidden {
    position: absolute;

    pointer-events: none;

    width: 1px;
    height: 1px;

    margin: 0;
    padding: 0;

    color: transparent;

    border: none;

    overflow: hidden;

    clip: rect(0, 0, 0, 0);

    white-space: nowrap;
  }
</style>

<div class='num-counter-wrapper'>
  <div
    id='btn-item-increment'
    class='num-btn'>
    -
  </div>
  <label
    class='visually-hidden'
    for='item-quantity'
    >Item Quantity</label
  >
  <input
    id='item-quantity'
    name='item-quantity'
    type='number'
    min='0'
    max='100'
    step='1'
    class='num'
    placeholder='0'
  />
  <div
    id='btn-item-decrement'
    class='num-btn'>
    +
  </div>
</div>
