---
const { id } = Astro.props;
---

<style>
  button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;

    min-height: 56px;
    width: 100%;
    max-width: 272px;

    border-radius: 10pt;
    border: none;
    background-color: var(--clr-orange-500);

    font-weight: 700;

    transition: background-color 0.1s ease-out;
  }

  button:hover {
    cursor: pointer;
    background-color: var(--clr-orange-200);
  }
</style>

<button id={id}>
  <slot />
</button>
